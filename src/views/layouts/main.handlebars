  <body>
    <nav class="bg-body-tertiary fixed-top navbar navbar-expand-lg navbar-light">
      <div class="container">
        <a class="mx-auto navbar-brand" href="/">
           <h1 class="tit-nav">Sport<strong>Plus</strong></h1>
        </a>
      <button aria-controls="responsive-navbar-nav" type="button" aria-label="Toggle navigation" class="navbar-toggler collapsed"
        data-bs-toggle="collapse" data-bs-target="#responsive-navbar-nav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-center" id="responsive-navbar-nav">
          <div class="uppercase letterspace-1 col-11 justify-content-center navbar-nav">
            <a class="nav-link" href="/">Home</a>
            <a class="nav-link" href="/products?page=1">Productos</a>
            <a class="nav-link" href="/realtimeproducts">Productos en tiempo real</a>
            <a class="nav-link" href="/chat">Chat</a>
          </div>
        </div>

        {{#if user}}
        <div style="display:flex;position:absolute;right:1%;flex-direction: column;">
          <div style="display: flex; justify-content: space-between;align-items: center;">
            <p class="">Bienvenido {{user.first_name}} {{user.last_name}}!</p>
            <form style="margin: 0 0 0 6rem;zoom: 80%;"action="/logout" method="POST">
            <button type="submit" class="btn button-black pl-3">Cerrar sesión</button>
            </form>
          </div>
          <div style="display: flex;justify-content: space-between;align-items: center; color:white">
            <p class="">✉ {{user.email}}</p>
            <p class="">Edad: {{user.age}}</p>
            <p class="">Cuenta: {{user.role}}</p>
          </div>
    </div>

    {{else}}
   {{/if}}
